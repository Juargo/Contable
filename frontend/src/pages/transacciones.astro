---
import Layout from '../layouts/Layout.astro';
import TransactionsList from '../components/TransactionsList';
---

<Layout title="MoneyDairy - Transacciones">
  <div class="dashboard">
    <!-- Sidebar -->
    <aside class="sidebar" id="sidebar">
      <div class="sidebar-header">
        <h1 class="logo">MoneyDairy</h1>
        <button id="sidebarToggle" class="sidebar-toggle" aria-label="Toggle sidebar">
          <span class="toggle-icon">‚ò∞</span>
        </button>
      </div>
      
      <nav class="sidebar-nav">
        <ul class="menu">
          <li class="menu-item">
            <a href="/" class="menu-button">
              <span class="menu-icon">üìä</span>
              <span class="menu-text">Dashboard</span>
            </a>
          </li>
          <li class="menu-item">
            <a href="/transacciones" class="menu-button active">
              <span class="menu-icon">üìù</span>
              <span class="menu-text">Transacciones</span>
            </a>
          </li>
          <li class="menu-item">
            <a href="/subir" class="menu-button">
              <span class="menu-icon">üì§</span>
              <span class="menu-text">Subir Archivo</span>
            </a>
          </li>
        </ul>
      </nav>
      
      <div class="sidebar-footer">
        <p>¬© 2023 MoneyDairy</p>
      </div>
    </aside>
    
    <!-- Main Content -->
    <main class="main-content">
      <div class="content-wrapper">
        <!-- Transactions Section -->
        <section class="transactions-section section-active">
          <h2 class="section-title">Transacciones Registradas</h2>
          <TransactionsList client:load />
        </section>
      </div>
    </main>
  </div>

  <script>
    // Script para controlar el sidebar en m√≥vil
    document.addEventListener('DOMContentLoaded', () => {
      const sidebar = document.getElementById('sidebar');
      const sidebarToggle = document.getElementById('sidebarToggle');
      
      sidebarToggle?.addEventListener('click', () => {
        sidebar?.classList.toggle('sidebar-collapsed');
      });
      
      if (window.innerWidth < 768) {
        sidebar?.classList.add('sidebar-collapsed');
      }
    });
  </script>
</Layout>

<style>
  /* Dashboard Layout */
  .dashboard {
    display: flex;
    min-height: 100vh;
  }
  
  /* Sidebar Styles */
  .sidebar {
    width: 240px;
    background-color: #1a237e;
    color: #fff;
    display: flex;
    flex-direction: column;
    transition: all 0.3s ease;
    z-index: 100;
  }
  
  .sidebar-collapsed {
    width: 60px;
    overflow: hidden;
  }
  
  .sidebar-header {
    padding: 1.5rem 1rem;
    display: flex;
    align-items: center;
    justify-content: space-between;
    border-bottom: 1px solid rgba(255, 255, 255, 0.1);
  }
  
  .logo {
    font-size: 1.5rem;
    margin: 0;
    font-weight: 700;
    color: white;
    white-space: nowrap;
  }
  
  .sidebar-toggle {
    display: none;
    background: none;
    border: none;
    color: white;
    cursor: pointer;
    font-size: 1.25rem;
  }
  
  .sidebar-nav {
    flex: 1;
    padding: 1rem 0;
  }
  
  .menu {
    list-style: none;
    padding: 0;
    margin: 0;
  }
  
  .menu-item {
    margin-bottom: 0.5rem;
  }
  
  .menu-button {
    width: 100%;
    display: flex;
    align-items: center;
    padding: 0.75rem 1rem;
    color: rgba(255, 255, 255, 0.8);
    background: none;
    border: none;
    border-left: 3px solid transparent;
    cursor: pointer;
    transition: all 0.2s ease;
    text-align: left;
    text-decoration: none;
  }
  
  .menu-button:hover {
    background-color: rgba(255, 255, 255, 0.1);
    color: white;
  }
  
  .menu-button.active {
    color: white;
    border-left-color: #4caf50;
    background-color: rgba(255, 255, 255, 0.05);
  }
  
  .menu-icon {
    margin-right: 0.5rem;
    font-size: 1.25rem;
    min-width: 1.5rem;
  }
  
  .sidebar-footer {
    padding: 1rem;
    font-size: 0.8rem;
    color: rgba(255, 255, 255, 0.5);
    border-top: 1px solid rgba(255, 255, 255, 0.1);
    text-align: center;
  }
  
  /* Main Content Styles */
  .main-content {
    flex: 1;
    background-color: #f8f9fa;
    padding: 1.5rem;
    overflow-y: auto;
  }
  
  .content-wrapper {
    max-width: 1200px;
    margin: 0 auto;
  }
  
  .section-title {
    font-size: 1.75rem;
    margin-bottom: 1.5rem;
    color: #333;
    border-bottom: 2px solid #e0e0e0;
    padding-bottom: 0.5rem;
  }
  
  .section-active {
    display: block;
  }
  
  /* Responsive Styles */
  @media (max-width: 768px) {
    .dashboard {
      flex-direction: column;
    }
    
    .sidebar {
      width: 100%;
      position: sticky;
      top: 0;
      flex-direction: row;
      height: auto;
      align-items: center;
      padding: 0.5rem;
    }
    
    .sidebar-header {
      padding: 0.5rem;
      border: none;
      width: 100%;
    }
    
    .sidebar-toggle {
      display: block;
    }
    
    .sidebar-nav,
    .sidebar-footer {
      display: none;
    }
    
    .sidebar-collapsed .sidebar-toggle {
      margin-left: auto;
    }
    
    .sidebar:not(.sidebar-collapsed) {
      position: fixed;
      height: 100vh;
      flex-direction: column;
      z-index: 1000;
    }
    
    .sidebar:not(.sidebar-collapsed) .sidebar-nav,
    .sidebar:not(.sidebar-collapsed) .sidebar-footer {
      display: block;
    }
    
    .main-content {
      padding: 1rem;
    }
  }
</style>
